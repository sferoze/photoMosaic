#photoBookSettingsModal
  text-align center
  .form-control
    color black
  .modal-content
    background-color rgba(255,255,255, .9)
  .modal-header
    border-bottom 0px
  .modal-footer
    border-top 0px
  .modal-body
    padding 15px 0px
    .seperator
      width 100%
      height 20px
      margin 10px 0px 
    .photo-book-public-url
      margin 0px auto
      max-width 400px
    .collab-color
      font-size 18px
      margin-right 10px
  .photo-book-name
    width 50%
    margin 0px auto
    text-align center
  .delete-photo-book
    display none
    &.active
      display inline
    span
      font-size 20px
      font-weight bold
      color black
  #cancelDelete
    margin-bottom 10px
  .save-close
    display block
    &.delete-active
      display none
